{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es6",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./build/",
    "webpack.*.js"
  ]
}
